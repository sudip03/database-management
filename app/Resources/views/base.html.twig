<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        
        <title>{% block title %}Club Database Management{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        {% block stylesheets %}
           <link rel="stylesheet" href="{{ asset('bundles/cdm/jquery-ui-1.11.1/jquery-ui.css') }}" />
           <link rel="stylesheet" href="{{ asset('bundles/cdm/bootstrap/css/bootstrap.css') }}" />
           <link rel="stylesheet" href="{{ asset('bundles/cdm/css/custom.css') }}" />
        {% endblock %}
        
        {% block javascripts %}
            <script src="{{ asset('bundles/cdm/js/jquery-1.11.1.min.js')}}"></script>            
            <script src="{{ asset('bundles/cdm/jquery-ui-1.11.1/jquery-ui.js')}}"></script>        
            <script src="{{ asset('bundles/cdm/bootstrap/js/bootstrap.min.js')}}"></script>
            <script src="{{ asset('bundles/cdm/js/custom.js')}}"></script>
            <script>
                $(function() {
                  $( ".datepicker" ).datepicker({ dateFormat: 'mm-dd-yy' });
                });
            </script>
        {% endblock %}
        
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="container">
          
            {% if app.user %}
            <!-- Nav menu starts here -->
              <ul class="nav nav-pills">
                <li><a href="{{path('dashboard')}}">Dashboard</a></li>
                {% if app.user.entity.group.description is defined %}
                    {% if app.user.entity.group.description == 'Administration' %}
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                              Manage <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="{{path('read_group')}}">Group</a></li>
                                <li><a href="{{path('read_role')}}">Role</a></li>
                                <li><a href="{{path('read_sex')}}">Sex</a></li>
                            </ul>
                        </li>
                     {% endif %}   
                {% endif %}
                <li><a href="{{path('logout')}}">Logout</a></li>
              </ul>
            <!-- Nav menu ends here -->
            {% endif %}
            
            {% block content %}{% endblock %}
        </div>
    </body>
</html>
