{% extends "::base.html.twig" %}

{%block content %}
    
  <h1>Group Management</h1>
  
  <p style="float: right;"><a class="btn btn-primary" href="{{path('create_group')}}">Add New</a></p> 
  
  <div class="table-responsive"> 
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>Group</th>
          <th>Associated Roles</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>

        {% for group in groups %}
        <tr>
            <td>{{loop.index}}</td>      
            <td> <a href="{{path('update_group', {'id':group.id})}}"> {{ group.description|capitalize }} </a> </td>
            <td>
                {% for role in group.role %}
                    {{role.description|capitalize}},
                {% endfor %}    
            </td>
            <td> <a href="{{path('delete_group', {'id':group.id})}}"><span class="anchor icon-remove"></span></a> </td>
        </tr>   
        {% endfor %}
        
       </tbody>
    </table>
  </div>
  
{% endblock %}