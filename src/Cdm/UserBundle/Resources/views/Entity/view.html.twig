{% extends "::base.html.twig" %}


{%block content %}
    
<h1> User Management</h1>

  <p style="float: right;"><a class="btn btn-primary" href="{{path('create_entity')}}">Add New</a></p> 
  
  <div class="table-responsive"> 
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Email</th>
          <th>Group</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
         
        {% for entity in entities %}
            <tr>
              <td>{{loop.index}}</td>
              <td>
                  <a href="{{path('update_profile', {'id':entity.id})}}">{{entity.getFullName}}</a>
              </td>
              <td>{{entity.email}}</td>
              <td>{{entity.group.description}}</td>
              <td>
                  <a href="{{path('delete_profile', {'id':entity.id})}}"><span class="anchor icon-remove"></span></a>
            </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

      <div class="pagination">
        <ul>
          <li><a href="#">Prev</a></li>
          <li><a href="#">1</a></li>
          <li><a href="#">2</a></li>
          <li><a href="#">3</a></li>
          <li><a href="#">Next</a></li>
        </ul>
    </div>
      

{% endblock %}
