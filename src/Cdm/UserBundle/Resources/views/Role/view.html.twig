{% extends "::base.html.twig" %}

{%block content %}
    
  <h1>Role Management</h1>

<p style="float: right;"><a class="btn btn-primary" href="{{path('create_role')}}">Add New</a></p> 
  
  <div class="table-responsive"> 
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>Role</th>
          <th>Access Group/s</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>


	{% for role in roles %}
 		<tr>
            <td>{{loop.index}}</td>      
            <td> <a href="{{path('update_role', {'id':role.id})}}"> {{ role.description|capitalize }} </a> </td>
            <td>
                {% for group in role.group %}
                    {{group.description|capitalize}},
                {% endfor %}    
            </td>
            <td>
              <a href="{{path('delete_role', {'id':role.id})}}"><span class="anchor icon-remove"></span></a> 
            </td>
           </tr> 
	{% endfor %}

       </tbody>
    </table>
  </div>
  
{% endblock %}